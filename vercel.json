{
    "rewrites": [
        {
            "source": "/api/(.*)",
            "destination": "/api"
        },
        {
            "source": "/(.*)",
            "destination": "/smart-coin-frontend/$1"
        }
    ],
    "functions": {
        "smart-coin-backend/server.js": {
            "runtime": "nodejs18.x"
        }
    },
    "builds": [
        {
            "src": "smart-coin-frontend/package.json",
            "use": "@vercel/next"
        },
        {
            "src": "smart-coin-backend/server.js",
            "use": "@vercel/node",
            "config": {
                "includeFiles": [
                    "smart-coin-backend/**"
                ]
            }
        }
    ]
}